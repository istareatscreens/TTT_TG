{
    "compilerOptions": {
      "outDir": "./public/",
      "noImplicitAny": true,
      "module": "es6",
      "target": "es5",
      "allowSyntheticDefaultImports": true,
      "typeRoots" : ["node_modules/@types", "src/types"],
      "jsx": "react",
      "allowJs": true,
      "moduleResolution": "Node",
      "lib": [ "dom", "dom.iterable", "esnext" ],
      "downlevelIteration": true,
      "skipLibCheck": true
    },
    "exclude": ["node_modules"],
    "include": ["src/js", "src/js/index.ts"]
  }